# Production Environment Configuration for AI Cybersecurity Tool

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///data/threats.db
DATABASE_CLEANUP_DAYS=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
API_WORKERS=4
API_TIMEOUT=30

# Security Configuration
API_KEY_SECRET=your-api-key-secret-change-this
JWT_SECRET=your-jwt-secret-change-this
RATE_LIMIT_PER_HOUR=1000
MAX_REQUESTS_PER_MINUTE=60

# Model Configuration
MODEL_PATH=models/
MODEL_UPDATE_INTERVAL=3600
MODEL_BACKUP_COUNT=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
METRICS_ENABLED=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Alert Configuration
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-email-password
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com

# WebSocket Configuration
WEBSOCKET_ENABLED=True
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RESPONSE_CACHE_TTL=300

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# SSL Configuration (for HTTPS)
SSL_ENABLED=False
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=False
LOAD_BALANCER_BACKENDS=api1:5001,api2:5001,api3:5001

# Container Configuration
CONTAINER_NAME=ai-cybersecurity-tool
CONTAINER_IMAGE=ai-cybersecurity-tool:latest
CONTAINER_RESTART_POLICY=unless-stopped

# Resource Limits
CPU_LIMIT=2
MEMORY_LIMIT=4GB
DISK_LIMIT=10GB

# Network Configuration
NETWORK_MODE=bridge
EXPOSED_PORTS=5001:5001,9090:9090

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Auto-scaling Configuration
AUTO_SCALE_ENABLED=False
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=5
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=True
FEATURE_REAL_TIME_ALERTS=True
FEATURE_MACHINE_LEARNING=True
FEATURE_API_RATE_LIMITING=True
FEATURE_DATABASE_PERSISTENCE=True
FEATURE_SECURITY_AUTHENTICATION=True
