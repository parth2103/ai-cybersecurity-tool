# Development Environment Configuration for AI Cybersecurity Tool

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-not-for-production

# Database Configuration
DATABASE_URL=sqlite:///data/threats_dev.db
DATABASE_CLEANUP_DAYS=7

# API Configuration
API_HOST=127.0.0.1
API_PORT=5001
API_WORKERS=1
API_TIMEOUT=60

# Security Configuration
API_KEY_SECRET=dev-api-key-secret
JWT_SECRET=dev-jwt-secret
RATE_LIMIT_PER_HOUR=10000
MAX_REQUESTS_PER_MINUTE=1000

# Model Configuration
MODEL_PATH=models/
MODEL_UPDATE_INTERVAL=0
MODEL_BACKUP_COUNT=2

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/app_dev.log
LOG_MAX_SIZE=5MB
LOG_BACKUP_COUNT=3

# Monitoring Configuration
METRICS_ENABLED=True
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=10

# Alert Configuration
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_SMTP_HOST=localhost
ALERT_EMAIL_SMTP_PORT=1025
ALERT_EMAIL_USER=dev@localhost
ALERT_EMAIL_PASSWORD=dev-password
ALERT_EMAIL_FROM=dev@localhost
ALERT_EMAIL_TO=dev@localhost

# WebSocket Configuration
WEBSOCKET_ENABLED=True
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# Performance Configuration
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=60
RESPONSE_CACHE_TTL=0

# Backup Configuration
BACKUP_ENABLED=False
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=backups/

# SSL Configuration
SSL_ENABLED=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=False
LOAD_BALANCER_BACKENDS=localhost:5001

# Container Configuration
CONTAINER_NAME=ai-cybersecurity-tool-dev
CONTAINER_IMAGE=ai-cybersecurity-tool:dev
CONTAINER_RESTART_POLICY=no

# Resource Limits
CPU_LIMIT=1
MEMORY_LIMIT=2GB
DISK_LIMIT=5GB

# Network Configuration
NETWORK_MODE=bridge
EXPOSED_PORTS=5001:5001,9091:9091

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# Auto-scaling Configuration
AUTO_SCALE_ENABLED=False
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=2
AUTO_SCALE_CPU_THRESHOLD=80
AUTO_SCALE_MEMORY_THRESHOLD=90

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=True
FEATURE_REAL_TIME_ALERTS=True
FEATURE_MACHINE_LEARNING=True
FEATURE_API_RATE_LIMITING=True
FEATURE_DATABASE_PERSISTENCE=True
FEATURE_SECURITY_AUTHENTICATION=True
